<odoo>
    <data>
        <template id="custom_report_header" t-extend="web.header">
            <xpath expr="//div[@id='header']" position="replace">
                <div class="header">
                    <img src='/oln_report/static/src/img/gandg_header.png' align="center"/>
                </div>
            </xpath>
        </template>

        <template id="custom_report_footer" t-extend="web.header">
            <xpath expr="//div[@id='header']" position="replace">
                <div class="footer">
                    <img src='/oln_report/static/src/img/gandg_footer.png' align="center"/>
                </div>
            </xpath>
        </template>

    </data>
</odoo>