<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="professeur_list">
      <field name="name">Professeur list</field>
      <field name="model">university.professeur</field>
      <field name="arch" type="xml">
        <tree>
          <field name="f_name"/>
          <field name="l_name"/>
          <field name="sexe"/>
          <field name="cni"/>
          <field name="birthday"/>
          <field name="start_date"/>
        </tree>
      </field>
    </record>
      
     <!-- explicit Form view definition -->

    <record model="ir.ui.view" id="professeur_form">
      <field name="name">Professeur form</field>
      <field name="model">university.professeur</field>
      <field name="arch" type="xml">
        <form>
            <group>
                <field name="f_name"/>
                <field name="l_name"/>
                <field name="sexe"/>
                <field name="cni"/>
                <field name="birthday"/>
                <field name="start_date"/>
                <field name="address"/>
                <field name="email"/>
                <field name="phone"/> 
            </group>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="professeur_action_window">
      <field name="name">professeur window</field>
      <field name="res_model">university.professeur</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="University" id="university.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Professeurs" id="university_professeur_cat" parent="university.menu_root"/>
 <!--   <menuitem name="Menu 2" id="university.menu_2" parent="university.menu_root"/> -->

    <!-- actions -->

    <menuitem name="Liste des professeurs" id="university_professeur_list" parent="university_professeur_cat"
              action="professeur_action_window"/>
 <!--   <menuitem name="Server to list" id="university" parent="university.menu_2"
              action="university.action_server"/> -->

      
