<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="departement_list">
      <field name="name">Departement list</field>
      <field name="model">university.departement</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="code"/>
        </tree>
      </field>
    </record>
      
     <!-- explicit Form view definition -->

    <record model="ir.ui.view" id="matiere_form">
      <field name="name">Departement form</field>
      <field name="model">university.departement</field>
      <field name="arch" type="xml">
        <form>
            <group>
                <field name="name"/>
                <field name="code"/>
            </group>
        </form>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="departement_action_window">
      <field name="name">departement window</field>
      <field name="res_model">university.departement</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- Top menu item -->

    <menuitem name="University" id="university.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Departements" id="university_departement_cat" parent="university.menu_root"/>
 <!--   <menuitem name="Menu 2" id="university.menu_2" parent="university.menu_root"/> -->

    <!-- actions -->

    <menuitem name="Liste des departements" id="university_departement_list" parent="university_departement_cat"
              action="departement_action_window"/>
 <!--   <menuitem name="Server to list" id="university" parent="university.menu_2"
              action="university.action_server"/> -->

      
